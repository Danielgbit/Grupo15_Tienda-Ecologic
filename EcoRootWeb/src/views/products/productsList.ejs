<% products.forEach(product => { %>
<a class="product-card" href="products/<%= product.product_id %>/detail">
    <section class="card">
        <img src="/img/products/<%= product.image %>" alt="imagen del producto">
        <div class="content-card-container">
            <section class="contain-content-card-1">
                <div class="description">
                    <span><%= product.name %></span>
                    <p>Ref: <span><%= product.product_id %> </span></p>
                    <p> Categoria: <span><%= product.productCategory.category_name %></span></p>
                </div>
                <div class="stars">
                    <span class="material-symbols-outlined">star</span>
                    <span class="material-symbols-outlined">star</span>
                    <span class="material-symbols-outlined">star</span>
                    <span class="material-symbols-outlined">star</span>
                    <span class="material-symbols-outlined">star</span>
                </div>
            </section>

            <section class="contain-content-card-2">
                <form method="POST" action="/products/addToCart">
                    <input type="hidden" name="product_id" value="<%= product.product_id %>">
                    <a>
                        <input type="hidden" name="quantity" value="1" min="1" max="1">
                        <button type="submit"class="button"><span class="material-symbols-outlined">add_shopping_cart</span></button>
                    </a>
                </form>
                <div class="price">
                    <% if(product.discount === '0.00') { %>
                    <span></span>
                    <% }else { %>
                    <span class="descuento"><%= product.discount %>% OFF</span>
                    <% } %>
                    <span class="total">$ <%= product.price %></span>
                </div>
            </section>
        </div>
    </section>
</a>
<% }) %>