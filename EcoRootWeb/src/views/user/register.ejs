        <%- include('../partials/header.ejs') %>

            <main class="main-register">

                <h1>REGISTRO</h1>

                <article class="content-register-wrapper">
                    <div class="img-register">
                        <img src="/img/articles/img-login.jpg" alt="">
                    </div>

                    <form class="form-register" action="/" method="POST">

                        <div class="input-register">
                            <label for="first_name">Nombre:</label>
                            <input type="text" id="first_name" name="first_name" required>
                        </div>

                        <div class="input-register">
                            <label for="last_name">Apellido:</label>
                            <input type="text" id="last_name" name="last_name" required>
                        </div>

                        <div class="input-register">
                            <label for="email">Correo electrónico:</label>
                            <input type="email" id="email" name="email" required>
                        </div>

                        <div class="input-register">
                            <label for="password">Contraseña:</label>
                            <input class="input-passw-register" type="password" id="password" name="password" required>
                            <!--                     <span class="view-none"><span class="material-symbols-outlined">visibility_off</span></span> -->
                        </div>

                        <label for="foto" class="form-dropArea-imgs">
                            <p>Avatar:</p>
                            <i class="fa-solid fa-camera"></i>
                            <label for="foto" class="custom-file-input">
                                <input type="file" id="foto" name="image" accept="image/*" required>
                            </label>
                        </label>

                        <div class="input-register">
                            <label for="first_name">País:</label>
                            <input type="text" id="country" name="country" required>
                        </div>

                        <div class="input-register">
                            <label for="first_name">Ciudad:</label>
                            <input type="text" id="city" name="city" required>
                        </div>

                        <div class="input-register">
                            <label for="first_name">Dirección:</label>
                            <input type="text" id="address" name="address" required>
                        </div>

                        <div class="input-register">
                            <label for="first_name">Codigo Postal:</label>
                            <input type="text" id="postalCode" name="postalCode" required>
                        </div>

                        <div class="input-register">
                            <label for="first_name">Fecha de nacimiento:</label>
                            <input type="date" id="birthDate" name="birthDate" required>
                        </div>

                        <div class="input-register">
                            <label for="first_name">Nombre de usuario:</label>
                            <input type="text" id="username" name="username" required>
                        </div>

                        <div class="input-register">
                            <label for="first_name">Genero:</label>
                            <input type="text" id="username" name="username" required>
                        </div>

